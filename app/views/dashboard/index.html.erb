

         


<h3 class="bg-primary">Student Information System</h3>


<div class="page-header">
	<h2>Dashboard</h2>
</div>

<div class="row">
    <div class="col-md-4">
    	<div class="page-header">

    		<h4 style="color:#ED872D">Listing Students</h4>

        <div class="left">

        <% User.all.each do |user|%>
        <% user.roles.each do |role|%>  
        <% if role == "super_admin"%>   
        <%= link_to "students", students_path,class: "btn btn-primary btn-xs "%>
        <%end%>
        <%end%>
        <%end%>
        </div>

    	</div>
        <div>
        <% std =Student.order(created_at: :desc).uniq%>
        <%  std.take(5).each do |student|%>
        <%= student.name%><br/>
        <%end%>
    </div>
    </div>


    <div class="col-md-4">
    	<div class="page-header">
    		<h4 style="color:#ED872D">Listing Batches</h4>
    	</div>
        <div>
        <% btch = Batch.order(created_at: :desc).uniq%>
        <% btch.take(5).each do |batch|%>
        <%= batch.name%><br/>
        <%end%>
    </div>

    </div>

    <div class="col-md-4">
    	<div class="page-header">
    		<h4 style="color:#ED872D">Listing Courses</h4>
    	</div>
         <div>
        <% cur =  Course.order(created_at: :desc).uniq%>
        <% cur.take(5).each do |course|%>
        <%= course.name%><br/>
        <%end%>
        </div>
    
    </div>
</div><br/><br/>


<div class="row">
    <div class="col-md-4">
        <div class="page-header">

            <h4 style="color:#ED872D">BatchesStudents</h4>
       </div>
        <div>
         <% Batch.all.each do |batch|%>
           <strong> <%= batch.name.capitalize%><br/></strong>
            <% batch.students.each do |student|%>
            <%= student.name%>
            <%end%><br/><br/>
            <%end%>
    </div>
    </div>


    <div class="col-md-8">
        
        <div>
       <%= pie_chart Batch.group(:name).count %>

    </div>

    </div>

    <div class="col-md-8">
        
        <div>
         
       <%= line_chart Student.find_by_id(:created_at) %>
      

    </div>

    </div>

   
</div><br/><br/>






































<div class= "row">
  <div class="col-md-12">

<table class="table table-bordered" id="myTable">
    <thead>
        <tr> <h3><th colspan="3" align="center"><center>Registerd Users</center> </th></h3></tr>
        <tr>
        <th>slno</th>
        <th>Name</th>
        </tr>
        </thead>
    <tbody>
        <% User.all.each_with_index do |user,index|%>
        <tr>
            <td> <%= index+1%></td>
            <td> <%= user.email%></td>
        </tr>
        <%end%>
    </tbody> 
</table>

</div>
</div>


