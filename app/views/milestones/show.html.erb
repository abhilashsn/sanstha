<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title"><%= @milestone.title%></h3>
  </div>
  <div class="panel-body">
   



<div>
<strong>Milestone Status :</strong>
<%= @milestone.is_completed %>
</div><br/>

<div>
<strong>Due Date :</strong>
<%= @milestone.due_date %>
</div><br/>
</div>
</div>


<%= link_to "Edit", edit_project_milestone_path(@milestone.project_id, @milestone), :class => "btn btn-primary", :method => :get %> 

<%= link_to "Delete", project_milestone_path(@milestone.project_id, @milestone), method: :delete, :class => "btn btn-danger", data: {confirm: "Are you sure?"} %> 
<br/><br/>




<h3> Add Tasks </h3>


<%= form_for([@milestone.tasks.build]) do |f| %>

<div class="form-group">
	<label> Name</label><br/>
	<%= f.text_field :name%><br/>
</div>

<div class="form-group">
	<label> Due Date </label><br/>
	<%= f.date_select :due_date%><br/>

<div class="form-group">
	<label> Is Completed? </label><br/>
	<%= f.check_box :is_completed %><br/>

	<%= f.hidden_field :milestone_id, value: @milestone.id %>
</div>
<div class="form-group">
<%= button_tag(type: 'submit', class: "btn btn-primary") do %>
 <i class="icon-ok icon-white"></i> Task Submit
<% end %></div>




<%end%>









