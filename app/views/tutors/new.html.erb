  <div class="col-md-8">

    <%#= button_to "Add batch", new_batch_path, :class => "btn btn-primary", :method => :get  %>


<h3> Add New Tutor</h3>

<%= form_for (@tutor) do |f| %>

<% if @tutor.errors.any? %>
        <ul>
            <% for msg in @tutor.errors.full_messages %>
            <li><%= msg %></li>
            <% end %>
        </ul>
  <% end %>



<div class="form-group">
<%#= f.collection_select(:course_id, courses, :id, :name, prompt: "Select Course")%>
<label>Name :</label><br/>
<%= f.text_field :name, class: "form-control", autofocus: true, placeholder: "Enter name here", required: true%><br/>
</div>

<%#= f.collection_select :batch, :course_id, Course.all, :id, :name, :prompt => 'Please select country' %>



<div class="form-group">
<label>Experience :</label><br/>
<%= f.text_field :experience, class: "form-control", autofocus: true, placeholder: "Enter experience here", required: true%><br/>

</div>

<div class="form-group">
<label>Qualification :</label><br/>
<%= f.text_field :qualification, class: "form-control", autofocus: true, placeholder: "Enter qualification here", required: true %><br/>
</div>

<div class="form-group" >
<label>Address :</label><br/>
<%= f.text_field :address, class: "form-control", autofocus: true, placeholder: "Enter address here", required: true %><br/>

</div>

<div class="form-group">
<label>Gender :<label><br/>
  <%= f.radio_button(:gender, "male", :checked => (:gender == 'male')? true:false) %>male
    <%= f.radio_button(:gender, "female", :checked => (:gender == 'female')? true:false) %>female<br/>
</div>

<div class="form-group" >
<label>Mobile :</label><br/>
<%= f.text_field :mobile, class: "form-control", autofocus: true, placeholder: "Enter mobile no here", required: true %><br/>

</div>


<div class="form-group" >
<label>Hourly_rate :</label><br/>
<%= f.text_field :hourly_rate, class: "form-control", autofocus: true, placeholder: "Enter hourly_rate here", required: true %><br/>

</div>


<div class="form-group" >
<label>Location :</label><br/>
<%= f.text_field :location, class: "form-control", autofocus: true, placeholder: "Enter location here", required: true%><br/>

</div>

<div class="form-group" >
<label>Email :</label><br/>
<%= f.text_field :email, class: "form-control", autofocus: true, placeholder: "Enter email here", required: true%><br/>

</div>






<%= button_tag(type: 'submit', class: "btn btn-danger") do %>
 <i class="icon-ok icon-white"></i> Save changes
<% end %>
<%end%>

